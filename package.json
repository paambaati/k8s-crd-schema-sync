{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/refs/heads/master/src/schemas/json/package.json",
    "name": "k8s-crd-schema-sync",
    "version": "0.3.0",
    "description": "Automated k8s CRD schema generation and syncing to public CRD catalogs",
    "type": "module",
    "main": "./src/index.ts",
    "private": true,
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "start": "bun src/index.ts",
        "test": "bun test",
        "test:integration": "RUN_INTEGRATION=true bun test --testPathPattern=test/integration",
        "sync": "bun src/index.ts --sync",
        "sync-pr": "bun src/index.ts --sync --create-pr",
        "lint": "oxlint src/ test/ --type-aware --type-check",
        "format": "oxfmt --write src/ test/",
        "format:check": "oxfmt --check src/ test/",
        "build": "bun build --compile --target bun-linux-x64 --outfile dist/kcss-linux-x64 src/index.ts",
        "build:all": "bun run build:linux-x64 && bun run build:linux-x64-musl && bun run build:linux-arm64 && bun run build:linux-arm64-musl && bun run build:darwin-x64 && bun run build:darwin-arm64",
        "build:linux-x64": "bun build --compile --target bun-linux-x64 --outfile dist/kcss-linux-x64 src/index.ts",
        "build:linux-x64-musl": "bun build --compile --target bun-linux-x64-musl --outfile dist/kcss-linux-x64-musl src/index.ts",
        "build:linux-arm64": "bun build --compile --target bun-linux-arm64 --outfile dist/kcss-linux-arm64 src/index.ts",
        "build:linux-arm64-musl": "bun build --compile --target bun-linux-arm64-musl --outfile dist/kcss-linux-arm64-musl src/index.ts",
        "build:darwin-x64": "bun build --compile --target bun-darwin-x64 --outfile dist/kcss-darwin-x64 src/index.ts",
        "build:darwin-arm64": "bun build --compile --target bun-darwin-arm64 --outfile dist/kcss-darwin-arm64 src/index.ts"
    },
    "dependencies": {
        "@octokit/rest": "22.0.1",
        "cac": "6.7.14",
        "js-yaml": "4.1.1",
        "openapi-schema-validator": "12.1.3",
        "pino": "10.3.0",
        "yaml": "2.8.2"
    },
    "devDependencies": {
        "@kubernetes/client-node": "1.4.0",
        "@types/bun": "latest",
        "@types/js-yaml": "4.0.9",
        "@types/node": "25.0.10",
        "oxfmt": "0.26.0",
        "oxlint": "1.41.0",
        "oxlint-tsgolint": "0.11.1",
        "typescript": "5.9.3"
    },
    "engines": {
        "bun": ">=1.0.0"
    }
}
