{
  "branches": [
    {
      "branch": "main",
      "prerelease": false
    },
    {
      "branch": "next",
      "prerelease": true,
      "prereleaseSuffix": "-beta"
    }
  ],
  "packages": {
    ".": {
      "changelog-path": "CHANGELOG.md",
      "version-file": "package.json",
      "release-type": "node"
    }
  },
  "plugins": [
    {
      "type": "commit-and-tag-version",
      "upgradeType": "standard"
    },
    {
      "type": "github",
      "releaseAssets": [
        {
          "path": "dist/kcss-*-linux-x64*",
          "type": "application/octet-stream"
        },
        {
          "path": "dist/kcss-*-linux-arm64*",
          "type": "application/octet-stream"
        },
        {
          "path": "dist/kcss-*-darwin-x64",
          "type": "application/octet-stream"
        },
        {
          "path": "dist/kcss-*-darwin-arm64",
          "type": "application/octet-stream"
        }
      ]
    }
  ]
}
